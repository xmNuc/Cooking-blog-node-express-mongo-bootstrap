<div class="row flex-lg-row-reverse align-items-center g-6 py-4 mp-4 mb-5">
  <div class="col-12 col-lg-6">
    <img
      src="/img/blob.png"
      width="600"
      height="500"
      alt="cooking"
      class="d-block mx-lg-aauto img-fluid"
      loading="lazy"
    />
  </div>
  <div class="col-12 col-lg-6">

    <% mainArticule.forEach(function(mainArticule) { %>
    <h1 class="display-5 fw-bold mb-3" id="<%= mainArticule.key %>"><%= mainArticule.name%></h1>
    

    <p class="load">
      <%= mainArticule.description%>
    </p><% }); %>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <% mainArticuleLast.forEach(function(mainArticuleLast) { %>
      <a
        href="#last"
        class="btn btn-outline-secondary btn-lg px-4 me-md-2 btn-last"
        ><%= mainArticuleLast.name%></a
      >
      <% }); %>
      <% mainArticuleRandom.forEach(function(mainArticuleRandom) { %>
      <a
        href="#random"
        class="btn btn-outline-dark btn-lg px-4 me-md-2 btn-random" id="<%= mainArticuleRandom.key%>"
        ><%= mainArticuleRandom.name%></a
      ><% }); %>
    </div>
  </div>
</div>
