<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%- typeof title != 'undefined'? title: 'Meble na wymiar' %></title>
    <link rel="shortcut icon" type="image/x-icon" href="/ico/favicon.ico" />
    <link type="text/css" rel="stylesheet" href="/dist/css/lightgallery.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lobster&family=Rubik:wght@300;500&family=Salsa&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" type="text/css" />
  </head>
  <body class="body" id="body-top">
    <div class="container-xxl px-md-5 bg-white shadow-fg">
      <header
        class="d-flex flex-wrap align-items-center justify-content-around py-1 mb-4 border-bottom fixed-top nav-nuc"
      >
        <% menuLogoName.forEach(function(menuLogoName) { %>
        <a
          href="#body-top"
          class="d-flex align-items-center col-xs-3 mb-1 mb-md-0 text-decoration-none main-logo"
          id="<%= menuLogoName.key%>"
          ><img src="/img/logo.png" class="logo-img" alt="Meble na wymiar" /><%= menuLogoName.name%>
        </a>
        <% }); %>
        <ul class="nav col-12 col-md-auto mb-2 justify-content-centermb-md-0 fs-5">
          <li>
            <% menuMainPage.forEach(function(menuMainPage) { %>
            <a href="#body-top" class="nav-link px-3 link-sec-nuc" id="<%= menuMainPage.key%>"
              ><%= menuMainPage.name%></a
            >
            <% }); %>
          </li>
          <li>
            <% menuMainAbout.forEach(function(menuMainAbout) { %>
            <a href="#info" class="nav-link px-2 link-sec-nuc" id="<%= menuMainAbout.key %>"
              ><%= menuMainAbout.name %></a
            >
            <% }); %>
          </li>
          <li>
            <% menuMainContact.forEach(function(menuMainContact) { %>
            <a href="#contact" class="nav-link px-2 link-sec-nuc" id="<%= menuMainContact.name %>"
              ><%= menuMainContact.name %></a
            >
            <% }); %>
          </li>
        </ul>

        <div class="language fs-5 px-5">
          <a href="/pl" class="lang-pl">PL</a> /
          <a href="/en" class="lang-en">EN</a>
        </div>
      </header>
      <main class="main-nuc"><%- body %></main>
      <footer class="py-5 text-center">
        Created by Jakub D. (NuC) 2022 <br />
        contact
        <a href="https://github.com/xmNuc" target="_blank">Guthub</a>
      </footer>
    </div>
    <script src="/dist/js/lightgallery.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript">
      lightGallery(document.getElementById('lightgallery'));
    </script>
    <script type="module" src="js/dynamic.js"></script>
  </body>
</html>
